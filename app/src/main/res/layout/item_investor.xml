                app:layout_constraintTop_toBottomOf="@+id/redPlan" />


            <ImageView
                android:id="@+id/chulo6verde"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/chuloaqua"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tituActPlan"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgRedPlan"
                app:layout_constraintVertical_bias="0.161" />

            <ImageView
                android:id="@+id/chuloupa"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginBottom="92dp"
                android:background="@drawable/uparrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/red2Plan"
                app:layout_constraintTop_toBottomOf="@+id/saldoPlanInicial"
                app:layout_constraintVertical_bias="0.344" />

            <TextView
                android:id="@+id/tituAct2Plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:text="U$ 50"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/red2Plan"
                app:layout_constraintVertical_bias="0.223" />

            <Button
                android:id="@+id/btnActPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="activar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tituAct2Plan"
                app:layout_constraintVertical_bias="0.709" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>