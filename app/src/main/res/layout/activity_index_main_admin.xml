<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.IndexMainAdminActivity">

    <LinearLayout
        android:id="@+id/idProgresSaldoRestante"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cargando"
            android:textAlignment="center"
            android:textColor="@color/plan6"
            android:textSize="@dimen/text_32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/m_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saldo Actual Wallet Madre"
            android:textAlignment="center"
            android:textColor="@color/plan1"
            android:textSize="@dimen/text_32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/m_5dp"
                android:background="@drawable/bacground_tem_money"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/m_5dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/usdtlogo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bacground_tem_money"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/m_5dp"
                        android:layout_marginTop="@dimen/m_5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="@dimen/m_5dp"
                        android:text="USDT: "
                        android:textColor="#0DD37E"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/idTxtSladoUSDTWalletMadre"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/m_5dp"
                        android:layout_marginTop="@dimen/m_5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="@dimen/m_5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="#0DD37E"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/m_5dp"
                android:background="@drawable/bacground_tem_money"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/m_5dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/trx" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bacground_tem_money"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/m_5dp"
                        android:layout_marginTop="@dimen/m_5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="@dimen/m_5dp"
                        android:text="TRX: "
                        android:textColor="#F44336"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/idTxtSladoTRXWalletMadre"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/m_5dp"
                        android:layout_marginTop="@dimen/m_5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="@dimen/m_5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="#0DD37E"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBtnTranferirAMadre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_32sp"
            android:backgroundTint="@color/typography"
            android:text="Tranferir a Wallet madre" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>